@page
@model awaq_frontend.Pages.UsersModel
@{
    ViewData["Title"] = "Usuarios";
}


<div class="container mt-3">
    <div class="row">
        <div class="col-2">
            <div class="containerMenu">
                <img src="~/images/AWAQLogoNegro.png" alt="" class="logo">
                <br>
                <div><a href="/Dashboard" class="menu-item"><i class="fas fa-tachometer-alt "></i> Tablero individual</a></div>
                @if (HttpContext.Session.GetString("UserRole") != "Miembro")
                {
                    <div><a href="/DashboardAdmin" class="menu-item"><i class="fas fa-tachometer-alt "></i> Tablero grupal</a></div>
                    <div><a class="menu-item active menu-button"><i class="fas fa-users"></i> Usuarios</a></div>
                }
                <div><a href="/UserManual" class="menu-item menu-button"><i class="fas fa-book"></i> Manual de usuario</a></div>
                <div><a href="/GameInstructions" class="menu-item"><i class="fas fa-gamepad"></i> Instrucciones</a></div>

                <div><a href="/Themes" class="menu-item"><i class="fas fa-palette"></i> Temas</a></div>
                <div><a href="/Form" class="menu-item"><i class="fas fa-file-alt"></i> Formulario</a></div>


                <div><a href="/Profile" class="menu-item"><i class="fas fa-user"></i> Perfil</a></div>

            </div>
        </div>
        <div class="col-10 extraPadding specialBackground">
            <div class="d-flex justify-cosntent-between align-items-center container1">
                <h5 class="align-name colorGris">@HttpContext.Session.GetString("UserEmail")</h5>
            </div>
            <div class="container6">
                <div class="row">
                    <div class="col-3 pt-3 pl-5">
                        <h3 class="mt-3">Agregar usuario</h3>
                        <form class="row" method="post" asp-page-handler="CreateUser">
                            <label class="mt-3"><b>Nombre</b></label>
                            <input value="@Model.PrevName" required asp-for="Input.name" class="form-control w-90" placeholder="Ingresa el nombre" />

                            <label class="mt-3"><b>Rol</b></label>
                            <select value="@Model.PrevRole" asp-for="Input.role" class="form-select">
                                <option value="3">Miembro</option>
                                @if (HttpContext.Session.GetString("UserRole") == "Super Administrador")
                                {
                                    <option value="2">Administrador</option>
                                }
                            </select>

                            <label class="mt-3"><b>Correo electrónico</b></label>
                            <input value="@Model.PrevEmail" required asp-for="Input.email" type="email" class="form-control" placeholder="Ingresa el correo electrónico" />

                            <label class="mt-3"><b>Contraseña</b></label>
                            <input value="@Model.PrevPassword" required asp-for="Input.password" type="password" class="form-control mb-4" placeholder="Ingresa la contraseña" />
                            <button type="submit" class="btn btn-success d-block m-auto col-6">Agregar</button>
                            @if (!string.IsNullOrEmpty(Model.Error))
                            {
                                <div class="alert alert-danger mt-4 " role="alert">
                                    @Model.Error
                                </div>
                            }
                        </form>
                    </div>


                    <div class="col-9">
                        <table class="table table-responsive table-bordered table-users">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Rol</th>
                                    <th>Correo electrónico</th>
                                    <th>Fecha de registro</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users != null)
                                {
                                    @foreach (var item in Model.Users)
                                    {
                                        @if (item.Role != "Super Administrador")
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                <td class="d-flex flex-row">
                                                    <div class="col-9">
                                                        @item.Role
                                                    </div>

                                                    @if (HttpContext.Session.GetString("UserRole") == "Super Administrador")
                                                    {
                                                        <form class="col" asp-page-handler="Role" method="post">
                                                            <input type="hidden" name="UserId" value="@item.ID" />
                                                            <input type="hidden" name="UserRole" value="@item.Role" />
                                                            <button type="submit" class="btn small @(item.Role == "Miembro" ? "btn-success" : "btn-dark")">
                                                                @if (item.Role == "Miembro")
                                                                {
                                                                    <i class="fa fa-arrow-up fa-sm"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="fa fa-arrow-down fa-sm"></i>
                                                                }
                                                            </button>
                                                        </form>

                                                    }
                                                </td>
                                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                                <td>@Html.DisplayFor(modelItem => item.JoinedAt)</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
