@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio de sesión";
}

<div class="row">
    <div class="col-7">
        <div class="containerInicio">
            <h1 class="mb-3">Inicio de sesión</h1>
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Correo electrónico: </label>
                    <br>
                    <input value="@Model.PrevEmail" required type="email"  asp-for="Input.email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu correo electrónico">
                    <br>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Contraseña: </label>
                    <br>
                    <input value="@Model.PrevPassword" type="password" required asp-for="Input.password" class="form-control" id="exampleInputPassword1" placeholder="Ingresa tu contraseña">
                    <br>
                </div>
                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @Model.Error
                    </div>
                }

                <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>

        </div>

    </div>
    <div class="col-5 containerLogo">
        <div class="ball" style="animation-delay: 0s; top: 20%; background-color: rgba(200, 255, 185, 0.6);"></div>
        <div class="ball" style="animation-delay: 1s; top: 40%; background-color: rgba(159, 222, 166, 0.6);"></div>
        <div class="ball" style="animation-delay: 2s; top: 60%; background-color: rgba(133, 199, 133, 0.6);"></div>
        <div class="ball" style="animation-delay: 3s; top: 80%; background-color: rgba(119, 170, 128, 0.6);"></div>
        <!-- <p class="text-success">Columna DOS</p> -->
        <img class="companyLogo" src="~/images/AWAQ-Logo.webp" alt="">

    </div>

</div>

<style>
    body {
        background-color: white;
        font-family: 'Arima', sans-serif;
        overflow: hidden;
    }

    .colorAwaq {
        color: #0d6803
    }

    .containerLogo {
        background-color: #2f8828;
        height: 100vh;
        position: relative;
        overflow: hidden;
        background-image: linear-gradient(62deg, #1e6b2b 0%, #54b46d 100%);
    }


    .alert{
        position: absolute;
        margin-top: 65px;
    }

    .companyLogo {
        max-width: 80%;
        max-height: 80%;
        object-fit: contain;
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .fondoLogo {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-45deg);
        filter: saturate(2);
    }

    .containerInicio {
        display: flex; /* Habilita Flexbox */
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 92%;


    }

    .btn-primary {
        background-color: #2C5629 !important;
        border-color: #2C5629 !important;
    }

    .ball {
        position: absolute;
        width: 30px;
        height: 30px;
        background-color: blue;
        border-radius: 50%;
        animation: blowWind 5s infinite linear;
        opacity: 0%;
    }
</style>
