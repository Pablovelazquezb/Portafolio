<div class="container mt-3">
    <div class="row">
        <div class="col-2">
            <div class="containerMenu">
                <img src="~/images/AWAQLogoNegro.png" alt="Logo de Awaq" class="logo">
                <br>
                <div><a href="/Dashboard" class="menu-item"><i class="fas fa-tachometer-alt"></i> Tablero individual</a></div>
                @if (HttpContext.Session.GetString("UserRole") != "Miembro")
                {
                    <div><a href="/DashboardAdmin" class="menu-item"><i class="fas fa-tachometer-alt"></i> Tablero grupal</a></div>
                    <div><a href="/Users" class="menu-item"><i class="fas fa-users"></i> Usuarios</a></div>
                }
                <div><a href="/UserManual" class="menu-item"><i class="fas fa-book"></i> Manual de usuario</a></div>
                <div><a href="/GameInstructions" class="menu-item"><i class="fas fa-gamepad"></i> Instrucciones</a></div>
                <div><a href="/Themes" class="menu-item"><i class="fas fa-palette"></i> Temas</a></div>
                <div><a href="/Form" class="menu-item active"><i class="fas fa-file-alt"></i> Formulario</a></div>
                <div><a href="/Profile" class="menu-item"><i class="fas fa-user"></i> Perfil</a></div>

            </div>
        </div>
        <div class="col-10 specialBackground">
            <div class="d-flex justify-content-between align-items-center container1">
                <h5 class="align-name colorGris">@HttpContext.Session.GetString("UserEmail")</h5>
            </div>
            <div class="container6">
                <h3 class="text-center pb-5 mt-5">Formulario de retroalimentación</h3>
                <div class="form-container d-flex justify-content-center">
                    <form asp-action="SubmitFeedback" method="post" class="w-75 p-4 bg-light rounded shadow">
                        <div class="form-group mb-3">
                            <label for="Suggestions" class="form-label">Sugerencias para mejorar el juego:</label>
                            <input type="text" asp-for="Input.Suggestions" id="Suggestions" name="Suggestions" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Remove" class="form-label">Petición para eliminar algún aspecto del juego:</label>
                            <input type="text" asp-for="Input.Remove" id="Remove" name="Remove" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label for="Questions" class="form-label">Preguntas:</label>
                            <input type="text" asp-for="Input.Questions" id="Questions" name="Questions" class="form-control" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-block m-auto d-block col-2 greenButton">Enviar</button>
                        </div>

                    </form>
                </div>
                @if (!string.IsNullOrEmpty(Model.Status))
                {
                    <div class="text-center mt-4 mb-3 m-auto d-block col-3 alert @Model.ButtonStatus" role="alert">
                        @Model.Status
                    </div>
                }
            </div>
        </div>
    </div>
</div>

