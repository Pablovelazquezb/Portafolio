<script>function toggleEditSave() {
        const editSaveBtn = document.getElementById('edit-save-btn');
        const formControls = document.querySelectorAll('.form-control');
        const form = document.getElementById('updateUser');

        if (editSaveBtn.innerText === 'Editar') {
            formControls.forEach(el => el.disabled = false);
            editSaveBtn.innerText = 'Guardar';
            editSaveBtn.classList.remove('btn-success');
            editSaveBtn.classList.add('btn-primary');
        } else {
            form.submit();
        }
    }

    document.getElementById('updateUser').addEventListener('submit', async (event) => {
        event.preventDefault();
    });

    document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('form');
        const editSaveBtn = document.getElementById('edit-save-btn');
        const formControls = document.querySelectorAll('.form-control');

        form.addEventListener('submit', () => {
            formControls.forEach(el => el.disabled = true);
            editSaveBtn.innerText = 'Editar';
            editSaveBtn.classList.remove('btn-primary');
            editSaveBtn.classList.add('btn-success');
        });
    });</script>
