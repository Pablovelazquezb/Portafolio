@page
@model Ecochef.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}

<h2>Sign Up</h2>

<form method="post">
    <div>
        <label for="NombreCompleto">Full Name:</label>
        <input type="text" id="NombreCompleto" name="NombreCompleto" asp-for="NombreCompleto" required />
    </div>

    <div>
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" asp-for="Email" required />
    </div>

    <div>
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" asp-for="Password" required />
    </div>

    <button type="submit">Sign Up</button>
</form>

@if (Model.SignUpFailed)
{
    <p style="color:red">Sign up failed. The email may already be in use.</p>
}
